<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Your Grid"
        android:id="@+id/tvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Layout with 2 Pictures"
        android:id="@+id/tvSubMenu1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:rowCount="1"
        android:id="@+id/gL2"
        android:tag="griddy">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 2A"
            android:id="@+id/btGrid2a"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 2B"
            android:id="@+id/btGrid2b"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 2C"
            android:id="@+id/btGrid2c"
            />

        </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Layout with 3 Pictures"
        android:id="@+id/tvSubMenu3" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:rowCount="1"
        android:id="@+id/gL3"
        android:tag="griddy">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 3A"
            android:id="@+id/btGrid3a"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 3B"
            android:id="@+id/btGrid3b"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 3C"
            android:id="@+id/btGrid3c"
            />

    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Layout with 4 Pictures"
        android:id="@+id/tvSubMenu4" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:rowCount="1"
        android:id="@+id/gL4"
        android:tag="griddy">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 4A"
            android:id="@+id/btGrid4a"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 4B"
            android:id="@+id/btGrid4b"
            />

    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Layout with 5 Pictures"
        android:id="@+id/tvSubMenu5" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:rowCount="1"
        android:id="@+id/gL5"
        android:tag="griddy">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid 5A"
            android:id="@+id/btGrid5a"
            />
    </GridLayout>

</LinearLayout>