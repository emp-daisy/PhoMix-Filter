<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Border"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt0"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brightness"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_margin="0dp"
                android:tag="effects"
                android:id="@+id/bt1"
                android:background="#000000"
                 />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrast"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Negative"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GrayScale"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt4"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturation"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt6"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sepia"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt7"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grain"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt9"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill-Light"
                android:background="@drawable/bt_effect"
                android:tag="effects"
                android:id="@+id/bt10"
                />
            </LinearLayout>
        </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/linny"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btSave"
        android:layout_above="@+id/skBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">
        <android.opengl.GLSurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:id="@+id/effectsView"/>
    </LinearLayout>



    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skBar"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:secondaryProgress="0"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:thumb="@drawable/progress_knob"
        android:progressDrawable="@drawable/progress_view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/tvEffect"
        android:layout_above="@+id/skBar"
        android:layout_alignParentLeft="true" />



</RelativeLayout>